<%- include('./header.ejs', {title: title}); %>

  <h1>
    <%= menuTitle %>
  </h1>

    <% if ( hawb.length > 0 ) { %>
      <% for(var i=0; i < hawb.length; i++) { %>
        <div class="container">
          <input class="form-check-input" type="radio" name="vendorChange" id="<%= hawb[i]['HAWB'] %>">
          <label class="form-check-label" for="vendorChange">
            <%= hawb[i]['HAWB'] %>
          </label>
        </div>
  
        <% } %>
        <div class="container">
          <button type="button" class="btn btn-danger" onclick="submitChange(<%= shipmentNo %>)">Post</button>
        </div>
    <% } else { %> 
      <div class="input-group input-group-sm mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-sm">Tracking#</span>
        </div>
        <input type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm" id="trackingText">
      </div>

      <div class="container">
        <button type="button" class="btn btn-danger" onclick="submitChange(<%= shipmentNo %>)">Post</button>
      </div>
    <% } %>
   
        
      

            <script>

              <% if ( hawb.length > 0 ) { %>
              var submitChange = function (shipment) {
                
                var element = document.body.getElementsByTagName('*')
                //http://dragonde-imac.local:3000
                console.log(element.length)
                for (var i = 0; i < element.length; i++) {
                  if (element[i]['id'] !== '') {
                    if ($(`#${element[i]['id']}:checked`).val() == 'on') {
                      console.log(element[i]['id'])
                      $.ajax({
                        method: 'POST',
                        url: `/post/InformationSet?function=hawbChange&shipmentNo=${shipment}&vendor=<%= vendor %>&hawb=${element[i]['id']}`
                      })
                      window.history.back();
                      //location.reload();
                      break;
                    } else {
                      console.log('non')
                    }
                  }


                }
              }

              <% } else { %>

                var submitChange = function (shipment) {
                
                  var str = document.getElementById("trackingText").value
                  if(str.length > 7 ) {
                    console.log(`/post/InformationSet?function=hawbChange&shipmentNo=${shipment}&vendor=<%= vendor %>&hawb=${str}`)
                    $.ajax({
                        method: 'POST',
                        url: `/post/InformationSet?function=hawbChange&shipmentNo=${shipment}&vendor=<%= vendor %>&hawb=${str}`
                    })
                  }

                }
              
              <% } %> 

            </script>
            </body>

            </html>

